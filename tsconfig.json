{
  "version": "2.0.0",
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "removeComments": false,
    "outDir": "lib/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "lib": ["dom", "es6"]
  },
  "files": ["src/index.ts"]
}
